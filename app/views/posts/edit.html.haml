.pad
  %h1 Editing post

  = form_for @post do |f|
    -if @post.errors.any?
      #error_explanation
        %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
        %ul
          - @post.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :text
      = f.text_area :text, :class => "ckeditor"
    .field
      = f.hidden_field :admin_id
    .field
      = f.label :created_at
      = f.datetime_select :created_at
    .actions
      = f.submit 'Save'

  = link_to 'Show', @post
  \|
  = link_to 'Back', posts_path
