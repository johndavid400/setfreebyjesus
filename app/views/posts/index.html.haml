.body_white
  %h1 Sonrise Blog

  .post.row
    .span10.offset1
      - @posts.each do |post|
        %center
          %h3.purple= link_to post.name, post
        = post.text.html_safe
        %p
        .post_footer= "Posted By: #{post.admin.username} | #{post.created_at.strftime("Published on %m/%d/%Y at %I:%M%p")}"

  %br

  = link_to 'New Post', new_post_path
